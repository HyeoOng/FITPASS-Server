<?xml  version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.fitpass.admin.AdminRequestDao">

    <insert id="insertRequest" parameterType="AdminRequest">
        INSERT INTO AdminRequest (user_id, title, content, created_at)
        VALUES (#{userId}, #{title}, #{content}, NOW());
    </insert>

    <select id="selectAllRequests" resultType="AdminRequest">
        SELECT * FROM AdminRequest
    </select>

    <delete id="deleteRequest" parameterType="int">
        DELETE FROM AdminRequest
        WHERE request_id = #{requestId};
    </delete>

</mapper>
