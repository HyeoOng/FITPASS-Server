<?xml  version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.fitpass.comment.CommentDao">

    <insert id="insertComment" parameterType="Comment">
        INSERT INTO Comment (user_id, post_id, comment, created_at, updated_at)
        VALUES (#{userId}, #{postId}, #{comment}, NOW(), NOW());
    </insert>

    <select id="selectAll" parameterType="int" resultType="Comment">
        SELECT *
        FROM Comment
        WHERE post_id = #{postId};
    </select>

    <delete id="deleteComment" parameterType="int">
        DELETE FROM Comment
        WHERE comment_id = #{commentId};
    </delete>

    <update id="updateComment" parameterType="Comment">
        UPDATE Comment
        SET comment = #{comment}, updated_at = NOW()
        WHERE comment_id = #{commentId};
    </update>
</mapper>
